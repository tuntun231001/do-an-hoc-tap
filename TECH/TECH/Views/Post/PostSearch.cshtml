@using TECH.Areas.Admin.Models
@using TECH.Utilities
@model PagedResult<PostModelView>
@{
    Layout = null;
}
<style>
    .box-detail-post img {
        width: 100%;
    }

    .blog-entry .text .heading {
        font-size: 20px;
        margin-bottom: 16px;
        text-overflow: ellipsis;
        -webkit-line-clamp: 2;
        overflow: hidden;
        display: -webkit-box;
        /* margin: 10px 0px; */
        margin-top: 0px;
        margin-bottom: 5px;
    }

    .short-content {
        text-overflow: ellipsis;
        -webkit-line-clamp: 3;
        overflow: hidden;
        display: -webkit-box;
        margin-top: 0px;
        font-size: 16px;
    }

    .btn-search-post {
        height: 95%;
        width: 46px;
        margin-top: 1px;
        margin-right: 0px;
        display: flex;
        justify-content: center;
        align-items: center;
        right: 0;
        cursor: pointer;
        background: #ddd;
        /* border: 1px solid #ddd; */
        border-left: unset;
        position: absolute;
    }

    .item-post {
        display: inline-block;
        width: 100%;
        height: 180px;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 10px;
        margin-bottom: 20px;
    }

    .post-right {
        display: inline-block;
        float: left;
        width: calc(100% - 250px);
        padding: 5px 0px 0px 18px;
        height: 100%;
        overflow: hidden;
    }

    .post-left {
        width: 250px;
        height: 100%;
        float: left;
    }

        .post-left img {
            height: 100%;
            width: 100%;
        }

    .breadcum ul li a {
        font-size: 15px;
    }
</style>
