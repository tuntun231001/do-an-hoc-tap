@using TECH.Areas.Admin.Models
@model List<CategoryMenuCountModelView>
@if(Model != null && Model.Count > 0){
    <div data-v-fabbb9d8="" class="sidebar-box">
    <h3 data-v-fabbb9d8="" class="heading">Danh mục</h3>
    <ul data-v-fabbb9d8="" class="categories">


         @foreach (var item in Model)
            {
                <li data-v-7b8a01fc="">
                    <a data-v-7b8a01fc="" href="/san-pham/@item.id">
                        <h6 data-v-7b8a01fc="">
                            @item.category_name <span data-v-7b8a01fc="">(@item.count_product)</span>
                        </h6>
                    </a>
                </li>
            }

    </ul>
</div>
}
