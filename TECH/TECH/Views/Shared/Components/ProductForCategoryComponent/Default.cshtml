@model List<ProductForCategoryModelView>

    <style>
        .t-prod-H {

        background: #e6e6e6;
    border-bottom: 1px solid #fff;
    display: block;
    width: 100%;
    height: 41px;
    margin-bottom: 0px;

}
.t-prod-H .t_span1 span.tab_news5 {
    background: #89a600;
}
.info-prod-H h3 {
    color: #333;
    font-weight: 400;
    padding: 8px;
    font-size: 13px;
    margin: 0px;
}
.info-prod-H h4 {
    font-size: 14px;
