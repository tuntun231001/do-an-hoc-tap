@using TECH.Areas.Admin.Models
@model List<ProductModelView>

@if (Model != null && Model.Count > 0)
{
    <section>
        <div class="content">
            <div class="container">
                <div class="hot_sp">
                    <h2 style="text-align:center;">
                        <a style="font-size: 28px;color: black;text-decoration: none" href="">Sản nổi bật</a>
                    </h2>
                    <div class="view-all" style="text-align:center;">
                        <a style="color: black;text-decoration: none" href="">Xem thêm</a>
                    </div>
                </div>
            </div>
            <!--Product-->
        </div>
        <div class="container product" style="width: 100%;margin: auto;">
            <div class="owl-carousel owl-theme owl-product-setting">
                @foreach (var item in Model)
                {
                    string priceStr = "";
                    @if (item.price > 0)
                    {
                        priceStr = item.price.Value.ToString("#,###");
                    }
                    <div class="item">
                        <div class="">
                            <div class="product-block">
                                <div class="product-img fade-box">
                                    <a href="#" title="Adidas Ultraboost W" class="img-resize">
                                        <img src="/website/images/shoes/801432_01_b16d089f8bda434bacfe4620e8480be1_grande.jpg" alt="Adidas Ultraboost W" class="lazyloaded">
                                        <img src="/website/images/shoes/shoes fade 4.jpg" alt="Adidas Ultraboost W" class="lazyloaded">
                                    </a>

                                </div>
                                <div class="product-detail clearfix">
                                    <div class="pro-text">
                                        <a style=" color: black;
                           font-size: 14px;text-decoration: none;" href="#" title="Adidas Ultraboost W" inspiration pack>
                                            @item.name
                                        </a>
                                    </div>
                                    <div class="pro-price">
                                        <p class="">@priceStr ₫</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </section>

}



